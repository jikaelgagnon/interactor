{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "firebase/*": ["src/database/firebase/*"]
    },
  },
  "include": [
    "src/**/*"
  ]
}